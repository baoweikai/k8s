FROM debian:buster-slim
ENV container docker
LABEL Description="mysql-router"
RUN set -eux; \
	apt-get update; \
	apt-get install -y --no-install-recommends ca-certificates wget; \
	wget -O /mnt/mysql-router-community.deb "https://dev.mysql.com/get/Downloads/MySQL-Router/mysql-router-community_8.0.20-1debian10_amd64.deb"; \
	wget -O /mnt/mysql-router.deb "https://dev.mysql.com/get/Downloads/MySQL-Router/mysql-router_8.0.20-1debian10_amd64.deb"; \
	apt-get install -y /mnt/mysql-router-community.deb /mnt/mysql-router.deb; \
	rm -rf /mnt/mysql-router-community.deb /mnt/mysql-router.deb; \
	rm -rf /var/lib/apt/lists/*;
CMD ["mysqlrouter --config /etc/mysqlrouter/mysqlrouter.cnf &"]